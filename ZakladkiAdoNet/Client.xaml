<Window x:Class="ZakladkiAdoNet.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZakladkiAdoNet"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="800"
        MaxHeight="450" MaxWidth="800" Background="Gray">
    <Grid>
        <TextBox x:Name="txtName" 
                 Grid.Row="0" Grid.Column="0" Margin="5,10,564,361"
                 Background="#FF222222" Foreground="White"
                 BorderThickness="7" BorderBrush="Orange"
                 FontSize="25" FontFamily="Century Gothic"
                 Text="Name:" 
                 VerticalContentAlignment="Center"
                 />
        <TextBox x:Name="txtQuantity" 
            Grid.Row="0" Grid.Column="0" Margin="5,79,564,292"
            Background="#FF222222" Foreground="White"
            BorderThickness="7" BorderBrush="Orange"
            FontSize="18" FontFamily="Century Gothic"
            Text="Quantity gram/piece:" 
            VerticalContentAlignment="Center"
                 />
        <TextBox x:Name="txtDescription" 
            Grid.Row="0" Grid.Column="0" Margin="246,10,252,292"
            Background="#FF222222" Foreground="White"
            BorderThickness="7" BorderBrush="Orange"
            FontSize="20" FontFamily="Century Gothic"
            Text="Description/Preferences:"
            VerticalContentAlignment="Center"
                 />
        <Image HorizontalAlignment="Left" Height="232" Margin="5,178,0,0" VerticalAlignment="Top" Width="241"/>
    </Grid>
</Window>
